extends base.pug

block content
    div.container.my-5
        div.text-center
            h1 Register

        div.container.w-50.my-5
            div.mb-3
                label.form-label(for="username") Username
                input.form-control(type="text" name="username" id="username")
            div.mb-3
                label.form-labell(for="password") Password
                input.form-control(type="password" name="password" id="password")
            div.mb-3
                label.form-label(for="confirm") Confirm Password
                input.form-control(type="password" name="confirm" id="confirm")
            button(elevation="2" id="submit") Register

    script(src="static/register.js")